<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.eurotrip.EuroDescription">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/country_details_head_img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="-2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/europe" />

            <TextView
                style="@style/country_details_heading"
                android:text="Visa Type"></TextView>

            <TextView
                style="@style/country_details_value"
                android:text="Tourist Schengen Visa"></TextView>

            <TextView
                style="@style/country_details_heading"
                android:text="Currency"></TextView>

            <TextView
                style="@style/country_details_value"
                android:text="EUR"></TextView>

            <TextView
                style="@style/country_details_heading"
                android:text="Popular Countries"></TextView>

            <TextView
                style="@style/country_details_value"
                android:text="Germany, France, Belgium, Italy and Spain"></TextView>

            <TextView
                style="@style/country_details_heading"
                android:text="Currency Convertor"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="24dp">

                <EditText
                    android:id="@+id/currency_inr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="74.51" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="INR" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="=" />

                <TextView
                    android:id="@+id/currency_euro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="EURO" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="convertCurrency"
                    android:background="#051F86"
                    android:textColor="#FFFFFF"
                    android:text="Convert" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
